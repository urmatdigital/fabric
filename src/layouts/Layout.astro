---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="bg-white shadow">
      <nav class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <a href="/" class="text-xl font-bold">Швейное производство</a>
          <div class="space-x-4">
            <a href="/cabinet" class="hover:text-blue-600">Личный кабинет</a>
            <a href="/production" class="hover:text-blue-600">Управление производством</a>
          </div>
        </div>
      </nav>
    </header>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>
