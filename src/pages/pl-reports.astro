---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Прибыли и убытки">
  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold mb-6">Отчёт о прибылях и убытках</h1>
    <div class="space-y-4">
      <div class="border-b pb-4">
        <h2 class="text-lg font-semibold mb-2">Общая прибыль</h2>
        <p class="text-2xl font-bold text-green-600">₽40,000</p>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <h3 class="text-gray-600">Доход от продаж</h3>
          <p class="text-xl">₽150,000</p>
        </div>
        <div>
          <h3 class="text-gray-600">Операционные расходы</h3>
          <p class="text-xl">₽110,000</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
