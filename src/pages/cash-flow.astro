---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Движение средств">
  <div class="bg-white rounded-lg shadow p-6">
    <h1 class="text-2xl font-bold mb-6">Движение денежных средств</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-green-50 p-4 rounded-lg">
        <h2 class="text-lg font-semibold text-green-700">Поступления</h2>
        <p class="text-2xl font-bold text-green-600">₽125,000</p>
      </div>
      <div class="bg-red-50 p-4 rounded-lg">
        <h2 class="text-lg font-semibold text-red-700">Расходы</h2>
        <p class="text-2xl font-bold text-red-600">₽85,000</p>
      </div>
    </div>
  </div>
</Layout>
